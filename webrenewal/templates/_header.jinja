{% if navigation_bundle and navigation_bundle.html %}
  {{ navigation_bundle.html | safe }}
{% elif navigation and navigation|length %}
<header class="site-topbar shadow-sm sticky-top">
  <a class="skip-link" href="#main-content">Zum Inhalt springen</a>
  <nav class="navbar navbar-expand-lg" data-bs-theme="dark" aria-label="Hauptnavigation">
    <div class="container-xl d-flex align-items-center gap-3">
      <a class="navbar-brand" href="{{ home_href | default('index.html') }}">{{ header_title | default('Renewed Website') }}</a>
      <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#fallback-navigation" aria-controls="fallback-navigation" aria-expanded="false" aria-label="Navigation umschalten">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-lg-end" id="fallback-navigation">
        <ul class="navbar-nav ms-lg-auto gap-lg-2">
          {% for item in navigation %}
          <li class="nav-item"><a class="nav-link" href="{{ item.href }}">{{ item.label }}</a></li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </nav>
</header>
{% else %}
<header class="site-topbar shadow-sm sticky-top">
  <a class="skip-link" href="#main-content">Zum Inhalt springen</a>
  <div class="container-xl py-3 text-white-50 small">Navigation wird nach dem Crawl erg√§nzt.</div>
</header>
{% endif %}
