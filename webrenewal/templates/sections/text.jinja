<section class="section py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        <div class="section-shell">
          {% if block.title %}
          <h2 class="h3 mb-4">{{ block.title }}</h2>
          {% endif %}
          <div class="section__body">
            {{ block.body }}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
