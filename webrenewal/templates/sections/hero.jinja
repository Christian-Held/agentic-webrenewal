{% set hero = block.data if block.data is mapping else {} %}
<section class="section section--hero">
  <div class="section__inner">
    {% if hero.kicker %}
    <p class="hero__kicker">{{ hero.kicker }}</p>
    {% endif %}
    <h2 class="hero__title">{{ block.title or 'Welcome' }}</h2>
    <p class="hero__body">{{ block.body }}</p>
    {% set cta_label = hero.cta_label or hero.cta_text %}
    {% set cta_href = hero.cta_href or hero.cta_url %}
    {% if cta_label and cta_href %}
    <p class="hero__actions">
      <a class="button button--primary" href="{{ cta_href }}">{{ cta_label }}</a>
    </p>
    {% endif %}
  </div>
</section>
